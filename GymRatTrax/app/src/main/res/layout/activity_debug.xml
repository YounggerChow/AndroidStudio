<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeScreen"
    android:background="#e68d00"
    android:id="@+id/activity_debug"
    android:orientation="vertical"

    android:weightSum="1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".HomeScreen"
        android:background="#e68d00"
        android:id="@+id/Row1"
        android:orientation="horizontal"

        android:weightSum="1"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SELECT * FROM"
            android:id="@+id/versionNum"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.08" />


        <Spinner
            android:layout_width="127dp"
            android:layout_height="24dp"
            android:id="@+id/debug_spinner"
            android:entries="@array/debug_array"
            android:spinnerMode="dropdown"
            android:touchscreenBlocksFocus="false" />

    </LinearLayout>

    <!--<ScrollView-->
        <!--android:layout_width="1000dp"-->
        <!--android:layout_height="200dp"-->
        <!--android:id="@+id/scrollview_table"-->
        <!--android:fillViewport="false"-->
        <!--android:layout_weight="2.91">-->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:id="@+id/scrollview_table"
        android:layout_weight="1">

        <TableLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/table_scroll">


        </TableLayout>
        <!--</LinearLayout>-->
    </ScrollView>


</LinearLayout>